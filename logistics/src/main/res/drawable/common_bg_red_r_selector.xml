<?xml version="1.0" encoding="UTF-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
      <shape android:shape="rectangle">
        <solid android:color="@color/common_main" />
        <size android:width="20dp" android:height="10dp" />
        <corners android:radius="5dp" />
        <stroke android:color="@color/common_gray" android:width="1dp"/>
        <padding
            android:bottom="3dp"
            android:left="5dp"
            android:right="5dp"
            android:top="3dp" />
      </shape>
    </item>
    <item android:state_checked="false">
      <shape android:shape="rectangle">
        <solid android:color="@color/common_white" />
        <size android:width="20dp" android:height="10dp" />
        <corners android:radius="5dp" />
        <stroke android:color="@color/common_gray" android:width="1dp"/>
        <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
      </shape>
    </item>
</selector>