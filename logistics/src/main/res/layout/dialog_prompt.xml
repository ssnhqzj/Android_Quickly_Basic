<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/version_dialog_bg">

    <RelativeLayout
        android:id="@+id/prompt_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/prompt_dialog_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/doubt"/>

        <TextView
            android:id="@+id/prompt_dialog_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/prompt_dialog_icon"
            android:minHeight="80dp"
            android:padding="5dp"
            android:background="@drawable/prompt_dialog_content_bg"
            android:gravity="center"
            android:text="确定要删除？"/>

    </RelativeLayout>

    <View
        android:id="@+id/prompt_dialog_line"
        android:layout_width="match_parent"
        android:layout_below="@+id/prompt_dialog_content"
        android:layout_height="1dp"
        android:background="#878787" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/prompt_dialog_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prompt_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/prompt_dialog_btn_bg_left"
            android:textSize="15sp"
            android:text="确定"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#878787">

        </View>

        <TextView
            android:id="@+id/prompt_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/prompt_dialog_btn_bg_right"
            android:textSize="15sp"
            android:text="取消" />

    </LinearLayout>

</RelativeLayout>

