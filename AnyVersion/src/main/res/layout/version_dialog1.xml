<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/version_dialog_bg">

    <TextView
        android:id="@+id/version_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/version_dialog_title_bg"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="版本更新"/>

    <TextView
        android:id="@+id/version_dialog_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:padding="5dp"
        android:layout_below="@+id/version_dialog_title" />

    <View
        android:id="@+id/version_dialog_line"
        android:layout_width="match_parent"
        android:layout_below="@+id/version_dialog_note"
        android:layout_height="1dp"
        android:background="#878787" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/version_dialog_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version_dialog_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/version_dialog_btn_bg_left"
            android:textSize="15sp"
            android:text="确定"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#878787">

        </View>

        <TextView
            android:id="@+id/version_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/version_dialog_btn_bg_right"
            android:textSize="15sp"
            android:text="稍后更新" />

    </LinearLayout>

</RelativeLayout>

