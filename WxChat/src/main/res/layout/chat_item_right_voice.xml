<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <com.qzj.chat.view.CircleImageView
        android:id="@+id/ciri_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFE4E4E4"/>

    <com.qzj.chat.view.ChatItemLayout
        android:id="@+id/ciri_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ciri_head"
        android:background="@drawable/chat_send"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ciri_content_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="3"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/ciri_content_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ciri_content_second"
            android:src="@mipmap/chat_voice_play_right_4"/>


    </com.qzj.chat.view.ChatItemLayout>

    <TextView
        android:id="@+id/ciri_hint"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/ciri_content"
        android:layout_centerVertical="true"
        android:background="@drawable/chat_voice_hint"
        android:visibility="gone" />

</RelativeLayout>

