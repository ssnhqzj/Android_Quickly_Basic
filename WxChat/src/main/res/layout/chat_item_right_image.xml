<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <com.qzj.chat.view.CircleImageView
        android:id="@+id/ciri_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFE4E4E4"/>

    <com.qzj.chat.view.ChatImageView
        android:id="@+id/ciri_content_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ciri_head"
        android:background="@drawable/chat_send"
        android:scaleType="centerInside"
        android:maxWidth="150dp"/>

</RelativeLayout>

